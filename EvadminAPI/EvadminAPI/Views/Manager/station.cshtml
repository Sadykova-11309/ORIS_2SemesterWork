@{
	Layout = "_Layout"; // ”казывает на общий Layout
	ViewData["Title"] = "Station";
}
	<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			<div class="container-full">
				<!-- Main content -->
				<section class="content">
					<div class="row">
						<div class="col-xxl-3 col-xl-6 col-lg-6 col-12 ">
							<div class="box box-body pull-up">
							  <h4 class="fw-500">Total Chargers</h4>
							  <div class="d-flex">
								<h2 id="totalStations" class="fw-500">0</h2>
							  </div>							  
							</div>
						</div>
						<div class="col-xxl-3 col-xl-6 col-lg-6 col-12 ">
							<div class="box box-body pull-up">
								<h4 class="fw-500">In Use Chargers <i class="fa-solid fa-circle-info text-fade"></i></h4>
								<div class="d-flex">
									<h2 id="activeStations" class="fw-500">0</h2>
								</div>
							</div>
						</div>
						<div class="col-xxl-3 col-xl-6 col-lg-6 col-12 ">
							<div class="box box-body pull-up">
								<h4 class="fw-500">Available Chargers <i class="fa-solid fa-circle-info text-fade"></i></h4>
								<div class="d-flex">
									<h2 id="availableStations" class="fw-500">0</h2>
								</div>
							</div>
						</div>
						<div class="col-xxl-3 col-xl-6 col-lg-6 col-12 ">
							<div class="box box-body pull-up">
								<h4 class="fw-500">Unavailable Chargers <i class="fa-solid fa-circle-info text-fade"></i></h4>
								<div class="d-flex">
									<h2 id="unavailableStations" class="fw-500">0</h2>
								</div>
							</div>
						</div>
					</div>
					<div class="row" id="stationsContainer">
						<!-- ƒинамически генерируемые карточки -->
					</div>
					<div class="row">
						<div class="col-xxl-12  col-12">
							<div class="box">
								<div class="box-header">
									<h4 class="box-title">Locations</h4>
								</div>
								<div class="box-body">
									<div class="col-12">
										<iframe id="stationMap"
												class="map"
												style="border:0; height:364px; width:100%; display:none;"
												allowfullscreen></iframe>
									</div>
								</div>
							</div>
						</div>
					</div>	
				</section>
				<!-- /.content -->
			</div>
		</div>
	<!-- /.content-wrapper -->
@section Scripts {
	<script src="~/js/station.js?v=1.0.1" defer></script>
}
	
	