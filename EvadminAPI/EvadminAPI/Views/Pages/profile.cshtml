@{
    Layout = "_Layout";
    ViewData["Title"] = "Profile";
}

<div class="content-wrapper">
    <div class="container-full">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="d-flex align-items-center">
                <div class="me-auto">
                    <h4 class="page-title">Profile</h4>
                    <div class="d-inline-block align-items-center">
                    </div>
                </div>
            </div>
        </div>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xl-4 col-lg-5">
                    <div class="card text-center">
                        <div class="card-body">
                            <img src="../../../images/avatar/avatar-13.png"
                                 class="bg-light w-100 h-100 rounded-circle avatar-lg img-thumbnail"
                                 alt="profile-image">

                            <!-- Динамическое имя пользователя -->
                            <h4 class="mb-0 mt-2" id="user-full-name">Loading...</h4>

                            <!-- Динамическая роль -->
                            <p class="text-muted fs-14" id="user-role">Loading role...</p>

                            <div class="text-start mt-3">
                                <p class="text-muted mb-2">
                                    <strong class="text-info">Full Name:</strong>
                                    <!-- Динамическое полное имя -->
                                    <span class="ms-2" id="user-full-name-value">Loading...</span>
                                </p>

                                <p class="text-muted mb-2">
                                    <strong class="text-info">Email:</strong>
                                    <!-- Динамический email -->
                                    <span class="ms-2" id="user-email">Loading...</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-8 col-lg-7">
                    <div class="card">
                        <div class="card-body">
                            <div class="dropdown float-end">
                                <a href="#" class="dropdown-toggle no-caret"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="mdi mdi-dots-vertical"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end">
                                    <a href="javascript:void(0);" class="dropdown-item">Settings</a>
                                    <a href="javascript:void(0);" class="dropdown-item">Action</a>
                                </div>
                            </div>

                            <!-- Динамический заголовок -->
                            <h4 class="header-title mb-3" id="dynamic-title">
                                Loading content...
                            </h4>

                            <!-- Контейнер для динамического контента -->
                            <div id="items-container">
                                <div class="text-center my-5">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    <p>Loading data...</p>
                                </div>
                            </div>

                            <!-- Пагинация -->
                            <div id="pagination-controls" class="d-flex justify-content-center mt-4">
                                <!-- Пагинация будет добавлена через JS -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <script src="~/js/profile.js?v=1.0.2" defer></script>
}
